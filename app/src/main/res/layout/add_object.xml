<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/add_objectRadioGroup"
			android:checkedButton="@+id/addCircleRadioButton">
			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Круг"
				android:id="@+id/addCircleRadioButton" />
			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Квадрат"
				android:id="@+id/addRectRadioButton" />
		</RadioGroup>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="X"
				android:textStyle="bold"
				android:layout_marginLeft="15dp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Y"
				android:textStyle="bold"
				android:layout_marginLeft="73dp" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<NumberPicker
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/xNumberPicker" />
			<NumberPicker
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/yNumberPicker"
				android:gravity="right" />
		</LinearLayout>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Размер:" />
		<NumberPicker
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/add_objectSeekBar" />
	</LinearLayout>
</ScrollView>
